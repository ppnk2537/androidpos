<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#FFC1E7" />
      <stroke
          android:width="1dp"
          android:color="#FCD6D6" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#FFC1E7"
          android:endColor="#FCD6D6"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#FCD6D6" />
 
    </shape>
  </item>
</selector>
