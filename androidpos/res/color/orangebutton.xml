<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#FFCC99" />

            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />

            <stroke android:width="1dp" android:color="#FCD6D6" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:centerColor="#FFA500" android:endColor="#FFA500" android:startColor="#FFA500" />

            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />

            <stroke android:width="1dp" android:color="#FFCC99" />

            <corners android:radius="8dp" />
            
        </shape></item>


</selector>