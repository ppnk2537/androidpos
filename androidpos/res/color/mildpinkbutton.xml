<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#FFC1E7" />

            <stroke android:width="1dp" android:color="#FCD6D6" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:centerColor="#FFC1E7" android:endColor="#FCD6D6" android:startColor="#FCD6D6" />

            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />

            <stroke android:width="1dp" android:color="#FCD6D6" />

            <corners android:radius="8dp" />
        </shape></item>

</selector>